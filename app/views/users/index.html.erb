<h1 align="center">All Users</h1>
 
 <% @users.each do |user| %>
    <div>
  <div class="p-3 m-3 bg-light bg-gradient border rounded-3 row d-flex justify-content-center">
   <div class="well col-md-4 col-md-offset-4">
    <div  align="center" ><%= link_to gravatar_for(user), user_path(user),class:"border rounded-8" %></div>
    <h5 align="center" ><%= link_to user.username, user_path(user) %></h5>
    <div align="center"><small ><%= pluralize(user.articles.count, "article") if user.articles %></small></div>
   </div>
  </div>
 </div>
 <% end %>    



 