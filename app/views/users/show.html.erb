<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="p-3 m-3 bg-light bg-gradient border rounded-3 row d-flex justify-content-center">
    <h5 align="center"> <%= @user.username.capitalize %> </h5>
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user,size: 50 %>
    </div>
</div>

<h4 align="center"><%= @user.username %>'s articles</h4>

<%= render 'shared/article', obj: @user.articles %>
